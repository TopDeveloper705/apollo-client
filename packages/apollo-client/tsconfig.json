{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "lib": ["es2015", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/__tests__/**/*",
    "src/**/__mocks__/**/*"
  ]
}
